/* pages/play/play.wxss */
@import '../../style/iconfont/iconfont.wxss';

.player {}

.player .player_bg {
  width: 100%;
  height: 90vh;
  background-color: #231520;
  padding: 100rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.player_bg_image {
  width: 100%;
  border-radius: 50%;
}

.player .player_control {
  height: 10vh;
  background-color: #232323;
}

.player_control_progres {
  display: flex;
  position: relative;
  align-items: center;
  color: #fff;
  box-sizing: border-box;
  padding: 10rpx;
  height: 4vh;
}

.progres_wapper {
  flex: 1;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.player_control {
  position: relative;
}

.player_control_wapper {
  position: absolute;
  bottom: 0;
  display: flex;
  height: 6vh;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  color: #fff;
}

.player_control_wapper .icon {
  font-size: 45rpx;
}
.player_control_wapper .icon-prev , .player_control_wapper .icon-next{
  font-weight: bold;
}