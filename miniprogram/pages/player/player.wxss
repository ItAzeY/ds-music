.player{

}

.player .player_bg{
  width: 100%;
  height: 90vh;
  background-color: #231520;
  padding: 100rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.player_bg_image{
  width: 100%;
  border-radius: 50%;
}

.player .player_control{
  height: 10vh;
  background-color: #232323;
}

.player_control_progres{
  display: flex;
  position: relative;
  align-items: center;
  color: #fff;
  box-sizing: border-box;
  padding: 10rpx;
}
.progres_wapper{
  flex: 1;
  box-sizing: border-box;
  padding: 0 10rpx;
}