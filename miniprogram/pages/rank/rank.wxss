/* pages/player/player.wxss */
.rank {
  box-sizing: border-box;
}
.rank .random_all{
  width: 96%;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #6DD5C9;
  color: #333;
  border-radius: 100px;
  margin: 10px 2%;
  box-sizing: border-box;
}

.rank .rank_item {
  display: flex;
  align-items: center;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.rank .rank_wapper {
  padding: 20rpx;
}

.rank .rank_item_index {
  padding-right: 20rpx;
  font-size: 36rpx;
}

.rank .rank_info_singer {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  color: #999;
  padding-bottom: 5rpx;
}

.rank .rank_info_name {
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 2;
}