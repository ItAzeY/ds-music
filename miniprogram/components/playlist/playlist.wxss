@import '../../style/iconfont/iconfont.wxss';
.playlist_wapper{
  width: 220rpx;
  padding-right: 10rpx;
  position: relative;
}
.playlist_wapper image {
  width: 100%;
  border-radius: 6px;
  background-size: cover;
}

.playlist_title {
  max-width: 100%;
  font-size: 28rpx;
  padding-top: 5rpx;
  text-overflow:ellipsis;
  color: #000000;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  line-height: 1.3;
}

.listen_num{
  position: absolute;
  top: 180rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #fff;
  padding: 5rpx 10rpx;
}

.fw_bold{
  color: #000;
  padding-bottom: 10rpx;
  text-overflow:ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.playlist_singer{
  font-size: 26rpx;
  color: #999;
}